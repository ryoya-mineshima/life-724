<div class="inner">
  <div class="search__result">
    <h2>＜ 検索結果 ＞</h2>
  </div>
  <%= form_with(url: search_tweets_path, local: true, method: :get, class: "search__form") do |form| %>
    <%= form.text_field :keyword, placeholder: "投稿を検索する", class: "search__input" %>
    <%= form.submit "検索", class: "search__btn" %>
  <% end %>
  <div class="contents__row">
    <% @tweets.each do |tweet| %>
      <%= render partial: "tweet", locals: { tweet: tweet } %>
    <% end %>
  </div>
</div>
