<main class="main">
  <div class="inner">
    <% if user_signed_in? %>
      <div class="greeting">
        <%= "ようこそ" %>
        <%= link_to current_user.name + "さん", user_path(current_user.id),class: :greeting__link%>
      </div>
      <div class="top__title">
        <h1>◆みんなのオススメ！ YouTube動画一覧◆</h1>
      </div>
      <div class="card__wrapper">
        <%= render partial: 'tweet', collection: @tweets %>
      </div>
    <% else %>
