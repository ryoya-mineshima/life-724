<%= form_with(model: tweet, local: true) do |f|%>

  <%= render "layouts/error_messages", model: f.object %>

  <div class="field">
    <%= f.label :title, "タイトル*" %><br />
    <%= f.text_field :title, id:"tweet_title" %>
  </div>

  <div class="field">
    <%= f.label :content, "コンテンツ*" %><br />
    <%= f.text_area :content, class: :form__text, id:"tweet_content" %>
  </div>

  <div class="field">
    <%= f.label :url, "URL*" %><br />
    <%= f.text_area :url, class: :form__text, id:"tweet_url" %>
  </div>

  <div class="field">
    <%= f.label :image, "YouTubeの画像*" %><br />
    <%= f.file_field :image, id:"tweet_image" %>
  </div>

  <div class="field2">
    <strong> *マーク必須項目 </strong>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>
<% end %>